FROM nvidia/cuda:8.0-devel-ubuntu16.04
LABEL maintainer "Nicolas Hoferer"

RUN apt-get update
RUN apt-get update && apt-get install -y \
       curl \
       python3-numpy \
       python3-pip \
               && \
   apt-get clean && \
   rm -rf /var/lib/apt/lists/*
RUN apt-get update
RUN pip3 install --upgrade pip
RUN pip3 install tensorflow-gpu==1.2.1 keras==2.0.6
RUN pip3 install thinc
RUN pip3 install h5py

COPY start_server3.sh /
COPY PA_BA/basic_seq2seq/ /seq2seq
COPY PA_BA/DataSets/ /datasets/
COPY glove.6B/glove.6B.100d.txt /glove/

WORKDIR /
ENTRYPOINT ["sh"]
CMD ["./start_server3.sh"]